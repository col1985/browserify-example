root = true

[*]
end_of_line = lf
insert_final_newline = true

[**.js]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[**.css]
indent_style = space
indent_size = 4

[**.html]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
